<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoy quÃ© quieres comer?"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#FF5722"
            android:padding="20dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FF5722" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5E8E1" />



        <Spinner
            android:id="@+id/spinner_direccion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:entries="@array/direcciones_array" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/imgbtn_comida"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_hamburguesa"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Comida" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu 1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
